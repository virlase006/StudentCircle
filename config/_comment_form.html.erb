
<h2>Comments</h2>
<% if @post.comments.length > 0 %>
  <% @post.comments.each do |comment| %>
    <p>
      <b>Author:</b>
      <%= comment.author %>
    </p>

    <p>
      <b>Comment:</b>
      <%= comment.body %>
    </p>
  <% end %>
<% else %>
  <h3>No comments have been posted yet.</h3>
<% end %>
<h2>Add a comment:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>