<table summary="Information about following/followers">
  <tr>
    <td class="main">
      <h1><%= @title %></h1>

        <ul class="users">
          <%= render @users %>
        </ul>
         <%= paginate @users %>
      </td>
    <td class="sidebar round">
      <strong>Name</strong> <%= @user.firstName %><br />
      <strong>URL</strong> <%= link_to user_path(@user), @user %><br />
      <strong>Microposts</strong> <%= @user.posts.count %>
      <%= render 'shared/stats' %>
      <% unless @users.empty? %>
          <%= link_to gravatar_for(user, :size => 30), user %>
        <% end %>
      <% end %>
    </td>
  </tr>
</table>